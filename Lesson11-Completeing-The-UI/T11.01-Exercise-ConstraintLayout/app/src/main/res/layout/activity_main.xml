<?xml version="1.0" encoding="utf-8"?><!-- TODO (17) Surround the Constraint layout with a ScrollView Okay-->
<!-- TODO (2) Replace the Relative layout with a ConstraintLayout Okay-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scroll"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <!-- TODO (3) Create a TextView for the Passenger label and name Okay-->
        <!-- TODO (4) Use tools:text to set the text value Okay-->

        <!-- TODO (5) Create an ImageView for the left rectangle Okay -->
        <!-- TODO (6) Set the background to the shape_rectangle_stroke drawable Okay -->

        <!-- TODO (7) Create an ImageView for the divider Okay-->

        <!-- TODO (8) Create an ImageView for the rightRectangle Okay -->

        <!-- TODO (9) Create a TextView for the origin code, the destination code and the flight code Okay-->

        <!-- TODO (15) Import the plane image SVG file into the drawable directory and name it art_plane Okay-->
        <!-- TODO (16) Create an ImageView for the plane and set the background to art_plane drawable Okay-->

        <!-- TODO (10) Create a TextView for the time texts and their corresponding labels Okay -->

        <!-- TODO (11) Create an ImageView for the blue table's header Okay-->

        <!-- TODO (12) Create an ImageView for the blue table's body Okay-->

        <!-- TODO (13) Create a TextView for each of the labels and text fields in the blue table Okay-->

        <!-- TODO (14) Create an ImageView for the barcode Okay-->


        <TextView
            android:id="@+id/tv_passenger_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.5"
            android:text="@string/passenger_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_passenger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_label"
            tools:text="@string/passenger_name" />

        <ImageView
            android:id="@+id/leftRectangle"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_rectangle_stroke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />


        <ImageView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintBottom_toTopOf="@+id/iv_destination"
            app:layout_constraintEnd_toStartOf="@+id/iv_destination"
            app:layout_constraintStart_toEndOf="@+id/leftRectangle"
            app:layout_constraintTop_toBottomOf="@+id/iv_destination" />

        <ImageView
            android:id="@+id/iv_destination"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/shape_rectangle_stroke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

        <TextView
            android:id="@+id/tv_origin_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="@+id/leftRectangle"
            app:layout_constraintStart_toStartOf="@+id/leftRectangle"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="@string/origin_code" />

        <TextView
            android:id="@+id/tv_destination_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="@+id/iv_destination"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="@string/destination_code" />


        <ImageView
            android:id="@+id/iv_plane"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/art_plane"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/iv_destination"
            app:layout_constraintStart_toEndOf="@+id/leftRectangle" />


        <TextView
            android:id="@+id/tv_flight_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/iv_destination"
            app:layout_constraintStart_toEndOf="@+id/leftRectangle"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="@string/flight_code" />

        <TextView
            android:id="@+id/tv_boarding_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.3"
            android:text="@string/boarding_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftRectangle" />

        <TextView
            android:id="@+id/tv_boarding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_time_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_time_label"
            tools:text="@string/boarding_time" />

        <TextView
            android:id="@+id/tv_boarding_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:letterSpacing="0.3"
            android:text="@string/boarding_in_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftRectangle" />

        <TextView
            android:id="@+id/tv_boarding_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorBad"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_in_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_in_label"
            tools:text="@string/boarding_in_time" />

        <ImageView
            android:id="@+id/iv_header_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_departure" />

        <TextView
            android:id="@+id/tv_departure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.3"
            android:text="@string/departure_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_time" />

        <TextView
            android:id="@+id/tv_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorGood"
            app:layout_constraintStart_toStartOf="@+id/tv_departure_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_departure_label"
            tools:text="@string/departure_time" />

        <TextView
            android:id="@+id/tv_arrival_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.3"
            android:text="@string/arrival_time_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="@+id/tv_boarding_in"
            app:layout_constraintTop_toBottomOf="@+id/tv_boarding_in" />

        <TextView
            android:id="@+id/tv_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorGood"

            app:layout_constraintStart_toStartOf="@+id/tv_arrival_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_arrival_label"
            tools:text="@string/arrival_time" />

        <TextView
            android:id="@+id/tv_terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminal_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_image"
            app:layout_constraintEnd_toEndOf="@+id/tv_terminal"
            app:layout_constraintStart_toStartOf="@+id/tv_terminal"
            app:layout_constraintTop_toTopOf="@+id/tv_gate_label" />

        <TextView
            android:id="@+id/tv_gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gate_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_image"
            app:layout_constraintEnd_toEndOf="@+id/tv_gate"
            app:layout_constraintStart_toStartOf="@+id/tv_gate"
            app:layout_constraintTop_toTopOf="@+id/iv_header_image" />

        <TextView
            android:id="@+id/tv_seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_image"
            app:layout_constraintEnd_toEndOf="@+id/tv_seat"
            app:layout_constraintStart_toStartOf="@+id/tv_seat"
            app:layout_constraintTop_toTopOf="@+id/iv_header_image" />

        <ImageView
            android:id="@+id/iv_table_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/tv_terminal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_image" />

        <TextView
            android:id="@+id/tv_terminal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_image"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_table_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_image"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/terminal" />

        <TextView
            android:id="@+id/tv_gate"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_image"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_image"
            app:layout_constraintStart_toStartOf="@+id/iv_table_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_image"
            tools:text="@string/gate" />

        <TextView
            android:id="@+id/tv_seat"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_image"
            app:layout_constraintEnd_toEndOf="@+id/iv_table_image"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/iv_table_image"
            app:layout_constraintTop_toBottomOf="@id/iv_header_image"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/seat" />

        <ImageView
            android:id="@+id/iv_barcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/barcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_table_image" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>


